@{
    ViewBag.Title = "FriendView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Friends View</h2>
<style>
    #mydiv, #mydiv2 {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1000;
        background-color: grey;
        opacity: .8;
    }

    .ajax-loader {
        position: absolute;
        left: 50%;
        top: 50%;
        margin-left: -32px; /* -1 * image width / 2 */
        margin-top: -32px; /* -1 * image height / 2 */
        display: block;
    }
</style>

<!-- Base Tea -->
<div data-ng-app data-ng-controller="baseTeaController" class="container">
    <strong class="error">{{ error }}</strong>
    <div id="mydiv2" data-ng-show="loading">
        <img src="Images/ajax-loader.gif" class="ajax-loader" />
    </div>
    <p data-ng-hide="addMode"><a data-ng-click="toggleAdd()" href="javascript:;" class="btn btn-primary">Add New</a></p>
    <form name="addBaseTea" data-ng-show="addMode" style="width:600px;margin:0px auto;">
        <label>Name:</label><input type="text" data-ng-model="newBaseTea.Name" required />
        <label>Price:</label><input type="text" data-ng-model="newBaseTea.Price" required />
        <br />
        <br />
        <input type="submit" value="Add" data-ng-click="add()" data-ng-disabled="!addBaseTea.$valid" class="btn btn-primary" />
        <input type="button" value="Cancel" data-ng-click="toggleAdd()" class="btn btn-primary" />
        <br /><br />
    </form>
    <table class="table table-bordered table-hover" style="width:800px">
        <tr>
            <th>#</th>
            <td>Name</td>
            <th>Price</th>
        </tr>

        <tr data-ng-repeat="baseTea in baseTeas">
            <td><strong data-ng-hide="baseTea.editMode">{{ baseTea.Id }}</strong></td>
            <td>
                <p data-ng-hide="baseTea.editMode">{{ baseTea.Name }}</p>
                <input data-ng-show="baseTea.editMode" type="text" data-ng-model="baseTea.Name" />
            </td>
            <td>
                <p data-ng-hide="baseTea.editMode">{{ baseTea.Price }}</p>
                <input data-ng-show="baseTea.editMode" type="text" data-ng-model="baseTea.Price" />
            </td>
            <td>
                <p data-ng-hide="baseTea.editMode"><a data-ng-click="toggleEdit(baseTea)" href="javascript:;">Edit</a> | <a data-ng-click="deleteBaseTea(baseTea)" href="javascript:;">Delete</a></p>
                <p data-ng-show="baseTea.editMode"><a data-ng-click="save(baseTea)" href="javascript:;">Save</a> | <a data-ng-click="toggleEdit(baseTea)" href="javascript:;">Cancel</a></p>
            </td>
        </tr>
    </table>
    <hr />


</div>

